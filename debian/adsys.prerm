#!/bin/sh
set -e

if [ "$1" = remove ] && [ "${DPKG_MAINTSCRIPT_PACKAGE_REFCOUNT:-1}" = 1 ]; then
        pam-auth-update --package --remove adsys
fi

if [ "$1" = purge ] && [ "${DPKG_MAINTSCRIPT_PACKAGE_REFCOUNT:-1}" = 1 ]; then
        adsysctl policy purge -a
        rm -rf /var/cache/adsys
fi

